#!/bin/bash

# get the number and total from user input
echo "Enter the number: "
read number

echo "Enter the total: "
read total

# calculate the percentage
percentage=$(echo "scale=2; ($number / $total) * 100" | bc)

# print the result
echo "The percentage is: $percentage%"
//output 
Enter the number:
25
Enter the total:
50
The percentage is: 50.00%
